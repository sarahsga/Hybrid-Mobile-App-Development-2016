<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hp.calculatorapp.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:textColor="#FFC107"
        android:id="@+id/textView_small"
        android:gravity="right"
        android:padding="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="@dimen/abc_text_size_large_material"
        android:textIsSelectable="false"
        android:gravity="center|right"
        android:padding="20px"
        android:id="@+id/textView_result"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:text="AC"
                android:id="@+id/btn_ac"
                style="@style/buttonDefault.moreOps"
                android:layout_weight="30"/>

            <Button
                android:text="/"
                android:id="@+id/btn_divide"
                style="@style/buttonDefault.ops"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:text="7"
                android:id="@+id/btn7"
                style="@style/buttonDefault.darkText.numbers"/>
            <Button
                    android:text="8"
                android:id="@+id/btn8"
                style="@style/buttonDefault.darkText.numbers"/>
            <Button
                android:text="9"
                android:id="@+id/btn9"
                style="@style/buttonDefault.darkText.numbers"/>
            <Button
                android:text="x"
                android:id="@+id/btn_multiply"
                style="@style/buttonDefault.ops"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:text="4"
                android:id="@+id/btn4"
                style="@style/buttonDefault.darkText.numbers"/>
            <Button
                android:text="5"
                android:id="@+id/btn5"
                style="@style/buttonDefault.darkText.numbers"/>
            <Button
                style="@style/buttonDefault.darkText.numbers"
                android:text="6"
                android:id="@+id/btn6"/>
            <Button
                android:text="-"
                android:id="@+id/btn_subtract"
                style="@style/buttonDefault.ops"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:text="1"
                android:id="@+id/btn1"
                style="@style/buttonDefault.darkText.numbers"/>
            <Button
                android:text="2"
                android:id="@+id/btn2"
                style="@style/buttonDefault.darkText.numbers"/>
            <Button
                android:text="3"
                android:id="@+id/btn3"
                style="@style/buttonDefault.darkText.numbers"/>
            <Button
                android:text="+"
                android:id="@+id/btn_add"
                style="@style/buttonDefault.ops"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:text="0"
                android:id="@+id/btn0"
                style="@style/buttonDefault.darkText.numbers"
                android:layout_weight="30"/>
            <Button
                style="@style/buttonDefault.ops"
                android:text="="
                android:id="@+id/btn_equals"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
